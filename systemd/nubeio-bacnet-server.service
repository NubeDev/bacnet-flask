[Unit]
Description=Flask Application for Nube BACNET SERVER
After=network.target

[Service]
Type=simple
User=<user>
WorkingDirectory=<working_dir>
ExecStart=<lib_dir>/venv/bin/gunicorn -b 0.0.0.0:1717 -w 1 run:app -e data_dir=/data/bacnet-flask
Restart=always
RestartSec=10
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=bacnet-flask

[Install]
WantedBy=multi-user.target
